<?xml version="1.0" encoding="utf-8"?>
<!--최민철 수정(xx.xx.xx)-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Mypage_sub2_Alarm">

    <!--alarm1-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/alarm1"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:textSize="15dp"
            android:text="푸시 알림" />

        <Switch
            android:id="@+id/alarm_sw1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/alarm1"
            android:layout_marginLeft="260dp"
            android:track="@drawable/switch_track_selector"
            android:thumb="@drawable/switch_thumb_selector"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerInParent="true"
        android:background="#FFC0C0C0"/>

    <!--alarm2-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/alarm2"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:textSize="15dp"
            android:text="내 글에 새 댓글" />

        <Switch
            android:id="@+id/alarm_sw2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/alarm2"
            android:layout_marginLeft="228dp"
            android:track="@drawable/switch_track_selector"
            android:thumb="@drawable/switch_thumb_selector"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerInParent="true"
        android:background="#FFC0C0C0"/>

    <!--alarm4-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/alarm3"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:textSize="15dp"
            android:text="이벤트 및 정보" />

        <Switch
            android:id="@+id/alarm_sw3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/alarm3"
            android:layout_marginLeft="232dp"
            android:track="@drawable/switch_track_selector"
            android:thumb="@drawable/switch_thumb_selector"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="#FFF5F5F5"/>

</LinearLayout>