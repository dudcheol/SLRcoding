<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e4e4e4"
    android:weightSum="10">

    <include
        layout="@layout/board_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:weightSum="10"
        android:background="@color/mainBg"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7">
        <EditText
            android:layout_weight="1.48"
            android:id="@+id/input_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:hint="※제목을 적어주세요※"
            android:textColor="#bababa"
            android:background="@null" />
        <View
            android:layout_weight="0.03"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#bababa"/>

        <EditText
            android:layout_weight="8.46"
            android:id="@+id/input_content"
            android:hint="※내용을 적어주세요※ \n\n1. 상품에 관련된 자세한 내용을 입력해주세요 \n2. 욕설, 비방 등 법적 문제의 소지가 있는 경우 차단 및 신고, 처벌 받으실 수 있습니다."
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:inputType="textMultiLine"
            android:lines="15"
            android:minLines="13"
            android:maxLines="17"
            android:textColor="#bababa"
            android:scrollbars="vertical"
            android:background="@null"/>
        <View
            android:layout_weight="0.03"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#bababa"/>

    </LinearLayout>
    <LinearLayout
        android:layout_weight="2.5"
        android:layout_width="match_parent"
        android:layout_height="0dp"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:background="@color/mainBg"
        android:orientation="vertical"
        android:weightSum="10">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:background="#bababa" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9.5">

            <ImageButton
                android:layout_width="13dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:background="@android:color/transparent"
                android:src="@drawable/hash2" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:background="@android:color/transparent"
                android:src="@drawable/camera" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:layout_marginRight="10dp">

                <EditText
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:textSize="10dp"
                    android:text="익명"
                    android:id="@+id/input_id"
                    android:textColor="#bababa"
                    android:background="@null"/>

                <EditText
                    android:inputType="textPassword"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:textSize="10dp"
                    android:layout_gravity="center_vertical"
                    android:text="0000"
                    android:id="@+id/input_pwd"
                    android:textColor="#bababa"
                    android:background="@null"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
