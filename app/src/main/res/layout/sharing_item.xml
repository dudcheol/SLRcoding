<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:id="@+id/sharing_cardview">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:backgroundTint="#8BC34A"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_height="30dp">
            <TextView
                android:id="@+id/sharing_type"
                android:text="자전거"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/avail_cardview"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="150dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="#FFF176"
            app:cardCornerRadius="5dp"
            app:cardElevation="10dp">

            <TextView
                android:id="@+id/sharing_useavail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_gravity="center"
                android:text="사용중"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="12dp" />
        </androidx.cardview.widget.CardView>
        <!--<androidx.cardview.widget.CardView
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="현재 000님이 사용중"
                >

            </TextView>
        </androidx.cardview.widget.CardView>-->

    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/sharing_user"
            android:layout_marginTop="80dp"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="사용자:"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:id="@+id/sharing_user_text"
            android:text="000"
            android:textColor="#F50606"
            android:layout_toRightOf="@id/sharing_user"
            android:layout_width="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:id="@+id/sharing_duration"
            android:layout_marginTop="100dp"
            android:text="사용기간:"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:id="@+id/sharing_duration_start"
            android:layout_marginTop="100dp"
            android:layout_toRightOf="@id/sharing_duration"
            android:layout_width="wrap_content"
            android:textColor="#F50606"
            android:text="시작일"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:text="~"
            android:id="@+id/tealt"
            android:layout_marginTop="100dp"
            android:textColor="#F50606"
            android:layout_toRightOf="@id/sharing_duration_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:id="@+id/sharing_duration_end"
            android:layout_toRightOf="@id/tealt"
            android:layout_marginTop="100dp"
            android:textColor="#F50606"
            android:text="종료일"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
    </RelativeLayout>
</androidx.cardview.widget.CardView>