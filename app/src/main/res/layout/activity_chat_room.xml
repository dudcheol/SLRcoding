<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ChatRoomActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chatRoomActivity_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="606dp">


    </androidx.recyclerview.widget.RecyclerView>
    <EditText
        android:layout_toLeftOf="@id/chatroomActivity_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/chatroomActivity_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:backgroundTint="@color/colorPrimary"
        android:id="@+id/chatroomActivity_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전송"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>

</RelativeLayout>